{
  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "build": "lerna run --parallel prebuild && tsc --build",
    "watch": "lerna run --parallel prebuild && tsc --build --watch",
    "clean": "npx shx rm -rf {.,packages/*}/{node_modules,lib,dist}",
    "fmt": "cargo fmt --check",
    "clippy": "cargo clippy --all-targets -- -D warnings -A clippy::result_large_err -A clippy::too_many_arguments"
  },
  "workspaces": [
    "packages/*"
  ],
  "pre-commit": [
    "fmt"
  ],
  "private": true,
  "dependencies": {
    "@coral-xyz/anchor": "^0.27.0",
    "@helium/anchor-resolvers": "^0.2.",
    "@solana/web3.js": "^1.77.3"
  },
  "devDependencies": {
    "@helium/spl-utils": "^0.2.6",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "lerna": "^5.5.4",
    "mocha": "^9.0.3",
    "pre-commit": "^1.2.2",
    "prettier": "^2.6.2",
    "shx": "^0.3.4",
    "ts-mocha": "^10.0.0",
    "typescript": "^4.3.5"
  }
}
